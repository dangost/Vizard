<Window x:Class="Vizard.GenreEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vizard"
        mc:Ignorable="d"
        Title="GenreEdit" Height="450" Width="357.5">
    <Grid>
        <Label x:Name="label" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,50,0,0"/>
        <Label x:Name="label_Copy" Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,129,0,0"/>
        <TextBox x:Name="genreNameTextbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163" Margin="137,54,0,0"/>
        <TextBox x:Name="genreDescriptionTextbox" HorizontalAlignment="Left" Height="156" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163" Margin="137,133,0,0"/>
        <Button x:Name="button" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="265,389,0,0" Click="button_Click"/>

    </Grid>
</Window>
