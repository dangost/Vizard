<Window x:Class="Vizard.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vizard"
        mc:Ignorable="d"
        Title="Login" Height="342.5" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid Height="310" VerticalAlignment="Top">
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="393,258,0,0" Click="button_Click"/>
        <Label x:Name="label" Content="E-mail:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,84,0,0" FontSize="14"/>
        <Label x:Name="label_Copy" Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,144,0,0" FontSize="14"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236" Margin="188,90,0,0" UndoLimit="35"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="236" Margin="188,150,0,0" Height="23"/>
        <Button x:Name="button1" Content="Sign up" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="393,10,0,0" Click="button1_Click"/>

    </Grid>
</Window>
